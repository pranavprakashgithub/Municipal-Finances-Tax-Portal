        <div class="o-page__card">
            <div class="c-card u-mb-xsmall">
                <header  class="c-card__header u-pt-large">
                    <a class="c-card__icon" href="#">
                        <img src="user_img/logo-login.svg" alt="Dashboard UI Kit">
                    </a>
                    <h1 class="u-h3 u-text-center u-mb-zero">NEW PROPERTY REGISTRATION</h1>
                </header>
                
                <form class="c-card__body">
                    <div class="c-field u-mb-small">
                        <label class="c-field__label" for="oldPropOwnerName">OLD PROPERTY OWNER NAME</label> 
                        <input class="c-input" type="text" id="oldPropOwnerName" placeholder="MICHAEL CLARKE" name="oldPropOwnerName" required> 
                        
                    </div>

                    <div class="c-field u-mb-small">
                        <label class="c-field__label" for="mobileNumber">MOB NO.</label> 
                        <input class="c-input" type="number" id="mobileNumber" placeholder="+91" name ="mobileNumber" required> 
                    </div>

                    <div class="c-field u-mb-small">
                        <label class="c-field__label" for="adharNumber">AADHAR NUMBER</label> 
                        <input class="c-input" type="number" id="adharNumber" name ="adharNumber" placeholder="XXXX-XXXX-XXXX-XXXX" required> 
                    </div>
                    <hr style="margin: 5px 0px 5px 0px;">
                    <div class="c-field u-mb-small">
                        <label class="c-field__label" for="propertyNumber">PROPERTY NUMBER</label> 
                        <input class="c-input" type="text" id="propertyNumber" name ="propertyNumber" required>
                        
                    </div>
                    <div class="c-field u-mb-small">
                        <label class="c-field__label" for="propertyAddress">PROPERTY ADDRESS</label> 
                        <textarea class="c-input" type="text" id="propertyAddress" name ="propertyAddress" required> </textarea>
                        
                    </div>
                    <div style="display: flex; justify-content: space-around;" class="flex-flex">
                        <div class="c-field u-mb-small">
                            <label class="c-field__label" for="areaPincode">AREA PINCODE</label> 
                            <input style="width: 58%;" class="c-input" type="number" id="areaPincode" name ="areaPincode" required>       
                        </div>
                        <div class="c-field u-mb-small">
                            <label class="c-field__label" for="input1">UPLOAD PHOTO</label> 
                            <input type="file" id="myFile" name="filename">
                            
                            
                        </div>
                    </div>
                    <hr style="margin: 5px 0px 5px 0px;">
                    //- <div class="c-field u-mb-small">
                    //-     <label class="c-field__label" for="input1">NEW PROPERTY OWNER NAME</label> 
                    //-     <input class="c-input" type="text" id="input1" placeholder="MICHAEL CLARKE" required> 
                        
                    //- </div>

                    //- <div class="c-field u-mb-small">
                    //-     <label class="c-field__label" for="input2">MOB NO.</label> 
                    //-     <input class="c-input" type="number" id="input2" placeholder="+91" required> 
                    //- </div>

                    <div class="c-field u-mb-small">
                        <label class="c-field__label" for="input3">YOUR AADHAR NUMBER</label> 
                        <input class="c-input" type="number" id="input3"  placeholder="XXXX-XXXX-XXXX-XXXX" value=#{user.adharNumber} required readonly> 
                    </div>

                    <button class="c-btn c-btn--info c-btn--fullwidth" id="btn" type="button">Request For Registration</button>
 
                </form>
                
            </div>

