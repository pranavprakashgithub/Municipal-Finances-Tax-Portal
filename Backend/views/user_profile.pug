                                                else
                                                    <input class="c-input" type="number" id="mobileNumber" onchange ="" name="mobileNo" placeholder="Mobile Number"> 
                                            </div>

                                            <div class="c-field u-mb-small">
                                                <label class="c-field__label" for="address">Address</label>
                                                if user.address
                                                    <textarea class="c-input" id="address" name="address"  readonly> #{user.address} </textarea>
                                                else
                                                    <textarea class="c-input" id="address" name="address" value = #{user.address} readonly> </textarea>
                                            </div>

                                            <div class="c-field u-mb-small">
                                                label.c-field__label(for="email") E-mail Address
                                                if user 
                                                    <input class="c-input" id="email" type="email" value = #{user.email} readonly> 
                                                else 
