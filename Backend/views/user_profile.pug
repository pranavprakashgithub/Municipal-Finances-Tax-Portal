                                                else 
                                                    <input class="c-input" id="lastName" type="text" placeholder="Dashboard Ltd.">
                                            </div>

                                            <div class="c-field u-mb-small">
                                                <label class="c-field__label" for="adharNumber">Aadhar Number</label>
                                                if user 
                                                    <input class="c-input" id="adharNumber" type="text" placeholder="XXXX-XXXX-XXXX-XXXX" value=#{user.adharNumber} readonly>
                                                else 
                                                    <input class="c-input" id="adharNumber" type="text" placeholder="XXXX-XXXX-XXXX-XXXX">
                                            </div>
                                            <div class="c-field u-mb-small">
                                                <label class="c-field__label" for="pinCode">Pin Code</label>
                                                if user.pinCode
                                                    <input class="c-input" id="pinCode" type="number" name="pinCode" readonly value =#{user.pinCode} >
                                                else
                                                    <input class="c-input" id="pinCode" type="number" name="pinCode" >
                                            </div>    

                                            <div class="c-field u-mb-small">
                                                <label class="c-field__label" for="houseNumber">House No.</label>
                                                if user.houseNumber 
